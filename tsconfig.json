{
  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node22/tsconfig.json"
  ],
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"],

  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "#src/*": [
        "./src/*"
      ],
    }
  }
}
